# System Integrity Protection status: disabled
# echo "$(whoami) ALL=(root) NOPASSWD: sha256:$(shasum -a 256 $(which yabai) | awk '{print $1}') $(which yabai) --load-sa" | sudo tee /private/etc/sudoers.d/yabai
